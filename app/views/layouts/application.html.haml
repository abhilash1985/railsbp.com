!!!
%html
  %head
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    = tag :meta, name: "stripe-key", content: STRIPE_PUBLIC_KEY
    = display_meta_tags site: "Railsbp", description: "rails best practices, code review, rails code analyze"
  %body
    = render_cell :header, :display, current_user, @repository
    %section#share= render "shared/addthis"
    %section#flash
      .container-fluid
        = notice_message
    %section#primary
      .content
        .well= yield
    %footer.footer
      .inner
        .container
          %p.pull-right
            = link_to 'Railsbp on Twitter', 'http://twitter.com/railsbp', class: 'twitter'
          %p
            Â© Railsbp, 2012
            = link_to 'Terms of Service', page_path(name: "terms")
            = link_to 'Privacy Policy', page_path(name: "privacy")
    = javascript_include_tag "application", "https://js.stripe.com/v1/", "payment", "https://s7.addthis.com/js/250/addthis_widget.js#pubid=flyerhzm"
